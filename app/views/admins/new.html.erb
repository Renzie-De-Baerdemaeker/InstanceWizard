<turbo-frame id="modal" data-action="turbo:frame-load->modal#open">
  <div class="flex flex-col items-center">
    <div>
      <h1 class="text-2xl font-bold">Add admin</h1>
      <%= form_with model: @admin, data: { turbo_frame: "modal" } do |form| %>
        <div class="flex flex-col">
          <%= form.label :first_name, class:"label mt-4" %>
          <%= form.text_field :first_name, class: "input" %>
        </div>
        <div class="flex flex-col">
          <%= form.label :last_name, class:"label mt-4" %>
          <%= form.text_field :last_name, class: "input" %>
        </div>
        <div class="flex flex-col">
          <%= form.label :email_address, class:"label mt-4" %>
          <%= form.text_field :email, class: "input" %>
        </div>
        <div class="flex justify-between mt-6">
          <button class="btn" type="button" data-action="modal#close">Cancel</button>
          <%= form.submit "Add", class: "btn" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>
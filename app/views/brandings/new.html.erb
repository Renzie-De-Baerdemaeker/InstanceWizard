<div class="flex items-center justify-center min-h-screen">
  <div class="card bg-base-100 w-96 shadow-xl">
    <div class="card-body">
      <%= form_with model: @branding do |form| %>
      <h1 class="card-title">Branding name & assets</h1>
        <div class="form-control">
          <%= form.label :name, class: "label" %>
          <%= form.text_field :name, required: true,class: "input input-bordered" %>
        </div>

        <div class="form-control">
          <%= form.label :logo, class: "label" %>
          <%= form.file_field :logo, required: true, class: "file-input file-input-bordered" %>
        </div>

        <div class="form-control">
          <%= form.label :favicon, class: "label" %>
          <%= form.file_field :favicon, required: true, class: "file-input file-input-bordered" %>
        </div>

        <div class="form-control">
          <%= form.label :background, class: "label" %>
          <%= form.file_field :background, required: true, class: "file-input file-input-bordered" %>
        </div>

        <div class="mt-4">
          <%= form.submit "Next", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
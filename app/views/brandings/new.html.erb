<div class="flex items-center justify-center min-h-screen bg-gray-100" data-theme="light">
  <div class="bg-white w-96 shadow-xl">
    <div class="p-6">
      <%= form_with model: @branding do |form| %>
      <h1 class="font-bold text-2xl">Upload assets</h1>
        <div>
          <%= form.label :branding_name, class: "label mt-4" %>
          <%= form.text_field :name, required: true,class: "input input-bordered" %>
        </div>

        <div>
          <%= form.label :logo, class: "label mt-4" %>
          <%= form.file_field :logo, required: true, accept: "image/*", class: "file-input file-input-bordered" %>
        </div>

        <div>
          <%= form.label :favicon, class: "label mt-4" %>
          <%= form.file_field :favicon, required: true, accept: "image/*", class: "file-input file-input-bordered" %>
        </div>

        <div>
          <%= form.label :background, class: "label mt-4" %>
          <%= form.file_field :background, required: true, accept: "image/*",class: "file-input file-input-bordered" %>
        </div>

        <div class="mt-4">
          <%= form.submit "Next", class: "btn btn-primary w-full" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
